.photo-slider
	@media screen and (max-width: 320px) {
		padding 0 20px
	}

.photo-slider__item
	position relative
	box-sizing: border-box

.photo-slider__content
	display flex
	justify-content space-between
	align-items center
	position absolute
	bottom 0
	left 0
	padding 40px 20px
	width 100%
	height 40px
	color white
	background rgba(0,0,0,0.6)
	box-sizing: border-box
	@media screen and (max-width: 648px) {
		color text-color
		background smoky-white
	}

.photo-slider__title
	margin-bottom 6px
	ptsansbold()
	text-transform uppercase

.photo-slider__likes
	display flex
	justify-content space-between
	align-items center
	width 60px

.icon-like
	width 23px
	height 23px
	fill white
	@media screen and (max-width: md) {
		fill #a9a9a9
	}
