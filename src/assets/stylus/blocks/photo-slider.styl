.photo-slider__item
	position relative
	box-sizing: border-box

.photo-slider__content
	display flex
	justify-content space-between
	align-items center
	position absolute
	bottom 0
	left 0
	padding 40px 20px
	width 100%
	height 40px
	color white
	background rgba(0,0,0,0.6)
	box-sizing: border-box

.photo-slider__title
	margin-bottom 6px
	ptsansbold()
	text-transform uppercase

.icon-like
	width 12px
	&::before
		width 23px
		height 23px

.photo-slider__likes
	display flex
	justify-content space-between
	align-items center
	width 60px
