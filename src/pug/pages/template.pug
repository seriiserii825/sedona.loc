		block yandex-api

		block title

	body
		block content

			block main-nav

	block footer
		.container
			footer.page-footer
				.page-footer__item.page-footer__item--visitsedona
					a(href="#") #visitsedona
				.page-footer__item.socials
					.socials__item.tweeter
						svg(width="20" height="20")
							use(xlink:href="#tweeter")
					.socials__item.facebook
						svg(width="20" height="20")
							use(xlink:href="#facebook")
					.socials__item.youtube
						svg(width="20" height="20")
							use(xlink:href="#youtube")
				.page-footer__item.page-footer__item--author
						span.page-footer__title Разработано
						svg.author(width="20" height="20")
							use(xlink:href="#htmlacadevy")


